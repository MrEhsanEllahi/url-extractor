<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Task - AI Time Journal</title>
    <!-- Styles -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    />
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.2.2/axios.min.js"
      integrity="sha512-QTnb9BQkG4fBYIt9JGvYmxPpd6TBeKp6lsUrtiVQsrJ9sb33Bn9s0wMQO9qVBFbPX3xHRAsBHvXlcsrnJjExjg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
  </head>

  <body>
    <div class="content-fluid">
      <% if (!locals.urls) { %>
      <div class="card">
        <div class="card-header bg-primary text-white">
          WebPage URLs Extractor
        </div>
        <div class="card-body">
          <form method="post" id="extractUrlsForm" action="/extract-urls">
            <div class="form-group">
              <label for="my-input">URL:</label>
              <input id="url" class="form-control" type="url" name="url" />
            </div>
          </form>
        </div>
        <div class="card-footer text-right">
          <button class="btn btn-primary" type="submit" form="extractUrlsForm">
            Get URLs
          </button>
        </div>
      </div>
      <% } %>
      <% if (locals.urls) { %>
      <div class="card">
        <div class="card-header">All links from the URL: <%= url %> </div>
        <div class="card-body">
          <% urls.forEach(url => { %>
          <li><a href="<%= url.href %> "><%= url.href %></a></li>
          <% }); %>
        </div>
      </div>
      <% } %>
    </div>
  </body>
</html>
